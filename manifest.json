{
    "manifest_version": 3,
    "name": "Privacy Policy Analyser",
    "version": "1.0",
    "description": "Enter privacy policy URL and the extension will analyse it",
    "permissions": [
      "activeTab",
      "https://localhost:5000/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },

    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }
  